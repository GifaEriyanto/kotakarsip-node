extends ../layouts/layout


block title

	|	#{ title }


block content

	#body

		section.container.default-section

			.col-md-6

				.headline Disposisi

				form.form-custom(action='/master', method='POST')

					.col-md-12

						input(type='hidden', name='init', value='disposition')

						input(type='text', name='disposition_name', placeholder='Disposisi Kepada:')

						input(type='text', name='disposition_position', placeholder='Jabatan')

						button.btn-plus(title='Tambah')

							i.fa.fa-plus

						table.table.table-bordered

							thead

								tr

									th #ID

									th Disposisi Kepada:

									th Jabatan

									th Aksi

							tbody

								- for row in data_disposition

									tr(style='cursor: pointer')

										td ##{ row.id }

										td #{ row.disposition_name }

										td #{ row.disposition_position }

										td

											a.btn-aksi(href='', title='Sunting')

												i.fa.fa-pencil

											&nbsp;

											a.btn-aksi(href='', title='Hapus', data-toggle='modal', data-target='#hapus-modal', data-init='master_disposition', data-id='#{ row.id }')

												i.fa.fa-times

								- endfor

		hr

		section.container.default-section

			.col-md-12

				.headline

					| Administrator 

					small(style='font-weight: normal; color: #999')

						i Kata sandi default: 12345

				form.form-custom(action='/master', method='POST')

					.col-md-6

						input(type='hidden', name='init', value='users')

						input(type='text', name='user_displayname', placeholder='Nama Lengkap')

						input(type='text', name='user_login', placeholder='Nama Pengguna')

						input(type='email', name='user_email', placeholder='Alamat Email')

						input(type='password', name='user_pass', placeholder='Kata Sandi')

						button.btn-plus(title='Tambah')

							i.fa.fa-plus

					.col-md-9

						table.table.table-bordered

							thead

								tr

									th #ID

									th Nama Lengkap

									th Nama Pengguna

									th Alamat Email

									th Aksi

							tbody

								- for row in data_users

									tr(style='cursor: pointer')

										td ##{ row.id }

										td #{ row.user_displayname }

										td #{ row.user_login }

										td #{ row.user_email }

										td

											a.btn-aksi(href='', title='Sunting')

												i.fa.fa-pencil

											&nbsp;

											a.btn-aksi(href='', title='Hapus', data-toggle='modal', data-target='#hapus-modal', data-init='master_users', data-id='#{ row.id }')

												i.fa.fa-times

								- endfor

		hr

		section.container.default-section

			.col-md-12

				.col-md-6

					.headline Penyimpanan Fisik

					form.form-custom(action='/master', method='POST')

						.col-md-12

							input(type='hidden', name='init', value='rack')

							input(type='text', name='rack_number', placeholder='Rak')

							button.btn-plus(title='Tambah')

								i.fa.fa-plus

							table.table.table-bordered

								thead

									tr

										th #ID

										th Rak

										th Aksi

								tbody

									- for row in data_rack

										tr(style='cursor: pointer')

											td ##{ row.id }

											td #{ row.rack_number }

											td

												a.btn-aksi(href='', title='Sunting')

													i.fa.fa-pencil

												&nbsp;

												a.btn-aksi(href='', title='Hapus', data-toggle='modal', data-target='#hapus-modal', data-init='master_rack', data-id='#{ row.id }')

													i.fa.fa-times

									- endfor

		#hapus-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')

			.modal-dialog

				.modal-content

					.modal-header

						button.close(type='button', data-dismiss='modal', aria-label='Close')

							span(aria-hidden='true') Ã—

						h4#title.modal-title Hapus

					.modal-body(style='background: #e74c3c; color: #fff;')

						| Apakah Anda yakin ingin menghapus ini?

					.modal-footer

						form(action="/master", method="POST")

							input(type="hidden", name="init", value="")
							input(type="hidden", name="id", value="")

							button.btn.btn-danger(name="delete", value="true") Ya

							button.btn.btn-default(type='button', data-dismiss='modal') Tidak

block script

	script.

		$('a.list[href="/master"]').parent().addClass('actived')

		$(".btn-aksi").click(function () {
			var init = $(this).data('init');
			var id = $(this).data('id');
			$('.modal input[name="init"]').val(init);
			$('.modal input[name="id"]').val(id);
		});